/* pages/buy/buy.wxss */
page{
  background: #f8fbff;
}
.page{
  width: 100%;
  min-height: 100%;
  overflow: hidden;
  position: relative;
}

.top_out_box{
  width: 100%;
  height: 90rpx;
  background: #fff;
  position: relative;
}
.top_out_box .tab_btn{
  width: 50%;
  float: left;
  height: 90rpx;
  line-height: 118rpx;
  color: #888;
  text-align: center;
  font-size: 30rpx;
  border-bottom: 1rpx solid #EAE1E1;
}
 .top_out_box .tab_0, .top_out_box .tab_1{
  color: #ff6767;
  border-bottom: 1rpx solid #ff6767;
}


/*  list  */
.list_out_box{
  width: 100%;
  overflow: hidden;
  position: relative;
}
.none_box{
  height: 900rpx;
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_none_buy.png) center 356rpx no-repeat;
  background-size: 146rpx 146rpx;
  line-height: 1108rpx;
  color: #b2b2b2;
  font-size: 32rpx;
  text-align: center;
}
.list_in_box{
  width: 100%;
  overflow: hidden;
  position: relative;
  padding: 0 20rpx 20rpx;
}
.list_item_box{
  width: 710rpx;
  margin-top: 20rpx;
  height: 180rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 12rpx 0 rgba(0,0,0,0.20);
  border-radius: 8rpx;
  position: relative;
}
.item_img{
  width: 180rpx;
  height: 140rpx;
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -70rpx;
  background: #ff6767;
}
.item_img image{
  width: 100%;
  height: 100%;
}
.item_name{
  width: 376rpx;
  height: 46rpx;
  position: absolute;
  left: 236rpx;
  top: 45rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item_brand{
  width: 376rpx;
  height: 37rpx;
  line-height: 37rpx;
  font-size: 26rpx;
  color: #888;
  position: absolute;
  left: 236rpx;
  top: 98rpx;
}
.item_audit{
  width: 100rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 4rpx;
  color: #fff;
  font-size: 24rpx;
  background: #30B2FC;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -22rpx;
  text-align: center;
}
.item_pass_out{
  background: #F86566;
}
.item_product_num{
  min-width: 100rpx;
  height: 46rpx;
  font-size: 32rpx;
  color: #888;
  line-height: 46rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -23rpx;
  text-align: right;
  white-space: nowrap;
}
.item_cover{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

