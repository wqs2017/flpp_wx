/* pages/audit/storeAudit.wxss */
page{
  background: #f8fbff;
}

.item_box{
  width: 100%;
  overflow: hidden;
  position: relative;
  margin-top: 10rpx;
}
.item_text_box{
  width: 100%;
  overflow: hidden;
  border-bottom: 1rpx solid #e6e7e8;
  position: relative;
  padding: 30rpx 0;
  background: #fff;
}
.item_text_title{
  height: 46rpx;
  line-height: 46rpx;
  float: left;
  margin-left: 24rpx;
  overflow: hidden;
  font-size: 30rpx;
  color: #b2b2b2;
}
.item_input_box{
  width: 426rpx;
  overflow: hidden;
  line-height: 45rpx;
  font-size: 30rpx;
  text-align: right;
  float: right;
  margin-right: 24rpx;
}
.item_input_box input{
  width: 520rpx;
  height: 100%;
  position: absolute;
  right: 24rpx;
  top: 0;
  padding: 30rpx 0; 
  box-sizing: border-box; 
}
.item_text{
  width: 100%;
  overflow: hidden;
  line-height: 45rpx;
  font-size: 30rpx;
}
.item_text1{
  display: none;
}


/* 平台  */
.platform_box{
  width: 100%;
  overflow: hidden;
  position: relative;
  background: #fff;
}
.platform_none_box{
  width: 100%;
  overflow: hidden;
  padding-bottom: 30rpx;
  margin-top: 10rpx;
  position: relative;
  border-bottom: 1rpx solid #e6e7e8;
}
.platform_title{
  width: 100%;
  overflow: hidden;
  line-height: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 30rpx 24rpx;
  position: relative;
}
.platform_title_tip{
  width: 40%;
  float: right;
  line-height: 45rpx;
  height: 45rpx;
  font-size: 28rpx;
  text-align: right;
  font-weight: 400;
}
.platform_tag_box{
  width: 702rpx;
  overflow: hidden;
  margin: 0 auto;
  padding: 10rpx 5rpx 40rpx 6rpx;
  background: #fbfbff;
}

.tag_box{
  width: 200rpx;
  margin: 30rpx 15rpx 0;
  height: 76rpx;
  background: #ddd;
  text-align: center;
  line-height: 76rpx;
  color: #fff;
  font-size: 32rpx;
  float: left;
}
.tag{
  width: 200rpx;
  height: 76rpx;
  background: #ddd;
  text-align: center;
  line-height: 76rpx;
  color: #fff;
  font-size: 32rpx;
}
.tag1{
  background: #F86566;
}
.platform_img_box{
  width: 360rpx;
  height: 50rpx;
  position: absolute;
  right: 24rpx;
  top: 50%;
  margin-top: -25rpx;
}
.platform_img{
  width: 50rpx;
  height: 50rpx;
  margin-left: 16rpx;
  float: right;
  border-radius: 50%;
  border: 1rpx solid #e6e7e8;
}

/* 上传图片  */
.upload_out_box{
  width: 100%;
  overflow: hidden;
  padding: 40rpx 13rpx 320rpx 13rpx;
  position: relative;
  background: #f8fbff;
}
.upload_in_box{
  width: 340rpx;
  overflow: hidden;
  margin: 0 11rpx;
  float: left;
  position: relative;
}
.img_box{
  width: 100%;
  height: 340rpx;
  position: relative;
  background: #fff;
  border: 1rpx solid #e6e7e8;
}
.img_cover{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}
.img_cover0{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_cover_e0.png) left center no-repeat;
  background-size: 100% 100%; 
}
.img_cover1{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_cover_e1.png) left center no-repeat;
  background-size: 100% 100%; 
}
.img_box image{
  width: 340rpx;
  height: 242rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -121rpx;
}
.upload_text{
  width: 100%;
  margin: 40rpx 0;
  padding: 0 10rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  color: #b2b2b2;
  height: 40rpx;
  line-height: 40rpx;
}
.upload_btn{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #30b2fc;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  margin: 0 auto 60rpx;
  position: relative;
}

.audit_btn{
  width: 100%;
  height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  color: #fff;
  text-align: center;
  background: #c1c1c1;
  font-size: 36rpx;
  line-height: 120rpx;
  z-index: 9;
}


/* picker  */
.picker_box{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0,0,0,0.6);
  left: 0;
  top: 0;
  z-index: 99999;
}
.picker_view{
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 99999;
  background: #fff;
}
.picker_sure,.picker_cancel{
  font-size: 32rpx;
  width: 100rpx;
  
  padding: 30rpx;
  box-sizing: content-box;
  color: #353535;
  height: 34rpx;
  line-height:34rpx;
  position: absolute;
  top: 0;
  z-index: 9999999;
}
.picker_cancel{
  left: 0;
}
.picker_sure{
  right: 0;
  text-align: right;
}
.picker_item_box view{
  font-size: 32rpx;
  text-align: center;
}
.input_holder{
  color: #b2b2b2;
}

