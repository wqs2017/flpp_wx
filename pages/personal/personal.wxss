/* pages/personal/personal.wxss */
page{
  background: #f8fbff;
}
.page{
  height: 100%;
  background: #f8fbff;
}
.fixed_cover{
  width: 100%;
  height: 418rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #f86565;
  z-index: 1;
}
.user_box{
  width: 100%;
  height: 418rpx;
  background: #f86565;
  position: relative;
  text-align: center;
  z-index: 9;
}
.user_img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 60rpx;
  margin-left: -70rpx;
  background: #fff;
}
.user_img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user_name{
  width: 100%;
  padding: 0 10rpx;
  height: 48rpx;
  color: #fff;
  font-size: 34rpx;
  position: absolute;
  left: 0;
  top: 220rpx;
  text-align: center;
}
.user_audit_box{
  display: inline-block;
  height: 60rpx;
  line-height: 58rpx;
  overflow: hidden;
  padding: 0 60rpx;
  color: #fff;
  font-size: 28rpx;
  margin: 298rpx auto 0;
  border: 1rpx solid #fff;
  border-radius: 100rpx;
}
.bottom_box{
  width: 100%;
  overflow: hidden;
  background: #f8fbff;
  position: relative;
  z-index: 10;
}
.audit_box{
  padding-top: 172rpx;
  width: 100%;
  overflow: hidden;
  text-align: center;
}
.audit_img{
  width: 150rpx;
  height: 128rpx;
  margin:  0 auto;
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_not_audit_bg.png) center center no-repeat;
  background-size: 150rpx 150rpx;
}
.audit_img0{
   background: url(http://ow5o1qil6.bkt.clouddn.com/pp_audit_bg.png) center center no-repeat;
  background-size: 150rpx 150rpx;
}
.audit_tip{
  margin: 30rpx 0 0;
  height: 40rpx;
  line-height: 40rpx;
  color: #b2b2b2;
  width: 100%;
  text-align: center;
}

