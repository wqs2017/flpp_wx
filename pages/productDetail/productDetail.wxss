/* pages/productDetail/productDetail.wxss */

.page{
  width: 100%;
  overflow: hidden;
  position: relative;
}
.top_img_box{
  width: 100%;
  height: 576rpx;
  position: relative;
}
.top_img{
  width: 100%;
  height: 100%;
  position: relative;
}
.top_cover{
  width: 100%;
  height: 310rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background-image: linear-gradient(-180deg, rgba(255,255,255,0.00) 0%, rgba(0,0,0,0.40) 100%);
  z-index: 2;
}
.top_text{
  width: 100%;
  height: 50rpx;
  text-align: center;
  padding: 0 10rpx;
  position: absolute;
  left: 0;
  bottom: 30rpx;
  z-index: 2;
  color: #fff;
  font-size: 36rpx;
}


.product_num_box{
  width: 100%;
  height: 100rpx;
  position: relative;
  background: #FFFFFF;
  box-shadow: 0 4rpx 12rpx 0 rgba(0,0,0,0.30);
}
.product_name{
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  position: relative;
  text-align: center;
  float: left;
}
.product_name_text{
  padding-left: 46rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  position: relative;
}
.product_name_text image{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -16rpx;
  border-radius: 50%;
  display: block;
  border: 1rpx solid #e6e7e8;
  box-sizing: border-box;
}
.product_num{
  width: 50%;
  height: 100%;
  position: relative;
  text-align: center;
  float: right;
  font-size: 48rpx;
  line-height: 100rpx;
  color: #F86566;
}
.product_num text{
  font-size: 24rpx;
  line-height: 128rpx;
  color: #F86566;
}

.buy_limit_box{
  width: 702rpx;
  height: 125rpx;
  line-height: 125rpx;
  position: relative;
  border-bottom: 1rpx solid #e6e7e8;
  margin: 0 auto;
}
.limit_title{
  width: 50%;
  height: 100%;
  line-height: 125rpx;
  position: absolute;
  left:0;
  font-size: 32rpx;
}
.limit_num{
  width: 50%;
  height: 100%;
  line-height: 125rpx;
  position: absolute;
  right:0;
  font-size: 32rpx;
  color: #f86566;
  text-align: right;
}

.help_box{
  width: 702rpx;
  overflow: hidden;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e6e7e8;
  position: relative;
  margin: 0 auto;
}
.help_title{
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.help_text_box{
  width: 100%;
  height: 40rpx;
  margin-top: 20rpx;
  position: relative;
}
.help_index{
  height: 22rpx;
  line-height: 20rpx;
  width: 22rpx;
  float: left;
  margin-top: 10rpx;
  color: #888;
  border-radius: 50rpx;
  border:1rpx solid #888;
  text-align: center;
  font-size: 16rpx;
}
.help_text{
  height: 40rpx;
  overflow: hidden;
  line-height: 40rpx;
  float: left;
  color: #888;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.save_img_box{
  width: 702rpx;
  overflow: hidden;
  position: relative;
  margin: 0 auto;
  padding: 40rpx 0;
}
.save_title{
  width: 100%;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.save_img_in_box{
  width: 100%;
  overflow: hidden;
  position: relative;
  padding-top: 8rpx;
  padding-bottom: 318rpx;
}
.save_img_in_box .image{
  width: 100%;
  height: 540rpx;
  margin-top: 12rpx;
  position: relative;
}
.save_img_in_box .image image{
  width: 100%;
  height: 100%;
}

/* bottom  */

.bottom_box{
  width: 100%;
  height: 120rpx;
  border-top: 1rpx solid #e6e7e8;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 9;
}
.bottom_left_box{
  width: 486rpx;
  height: 100%;
  float: left;
  position: relative;
}
.order_btn{
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  position: absolute;
  right: 24rpx;
  top: 50%;
  margin-top: -35rpx;
  border-radius: 61rpx;
  color: #fff;
  font-size: 28rpx;
  padding-left: 113rpx;
  background: #ff6767 url(http://ow5o1qil6.bkt.clouddn.com/pp_buy_logo_white.png) 71rpx center no-repeat;
  background-size: 32rpx 32rpx;
}
.sub_box{
  width: 70rpx;
  height: 70rpx;
  position: relative;
  float: left;
  margin: 25rpx 0 0 24rpx;
  border-radius: 50%;
}
.sub_box0{
  border: 1rpx solid #f86566;
}
.sub_box1{
    border: 1rpx solid #d8d8d8;
}
.sub_x{
  width: 34rpx;
  height: 6rpx;
  border-radius: 100rxp;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -3rpx 0 0 -17rpx;
}
.default_sub{
  background: #d8d8d8;
}
.red_sub{
  background: #f86566;
}
.add_y{
  width: 6rpx;
  height: 34rpx;
  border-radius: 100rxp;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -17rpx 0 0 -3rpx;
}
.order_number{
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
  margin: 0 6rpx 0 30rpx;
  float: left;
}

/* 加减icon  */
.sub_icon0{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_red_sub_icon.png) center center no-repeat;
  background-size: 100% 100%;
}
.add_icon0{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_red_add_icon.png) center center no-repeat;
  background-size: 100% 100%;  
}
.sub_icon1{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_gray_sub_icon.png) center center no-repeat;
  background-size: 100% 100%;
}
.add_icon1{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_gray_add_icon.png) center center no-repeat;
  background-size: 100% 100%;  
}

