/* pages/passDetail/passDetail.wxss */

.top_img_box{
  width: 100%;
  height: 576rpx;
  position: relative;
}
.top_img{
  width: 100%;
  height: 100%;
  position: relative;
}
.top_cover{
  width: 100%;
  height: 310rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background-image: linear-gradient(-180deg, rgba(255,255,255,0.00) 0%, rgba(0,0,0,0.40) 100%);
  z-index: 2;
}
.top_text{
  width: 100%;
  height: 50rpx;
  text-align: center;
  padding: 0 10rpx;
  position: absolute;
  left: 0;
  bottom: 30rpx;
  z-index: 2;
  color: #fff;
  font-size: 36rpx;
}


.product_num_box{
  width: 100%;
  height: 100rpx;
  position: relative;
  background: #FFFFFF;
  box-shadow: 0 4rpx 12rpx 0 rgba(0,0,0,0.30);
}
.product_num{
  width: 50%;
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: center;
}
.product_num0{
  border-right:1rpx solid #e6e7e8;
  padding-left: 1rpx; 
}
.detail_box{
  width: 100%;
  padding: 0 24rpx 216rpx;
  background: #f8fbff;
  overflow: hidden;
  position: relative;
}
.detail_title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.platform_item{
  width: 100%;
  height: 180rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 12rpx 0 rgba(0,0,0,0.20);
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  position: relative;
  padding: 0 20rpx;
}
.platform_img{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  border: 1rpx solid #e6e7e8;
  left: 20rpx;
  top: 50%;
  margin-top: -60rpx;
  border-radius: 50%;
}
.platform_text{
  width: 180rpx;
  height: 46rpx;
  line-height: 46rpx;
  position: absolute;
  left: 156rpx;
  top: 50%;
  margin-top: -23rpx;
}

.add_num{
  height:56rpx;
  line-height: 56rpx;
  margin: 62rpx 10rpx 0;
  float: right;
}
.add_sub{
  width: 56rpx;
  height: 56rpx;
  float: right;
  margin: 62rpx 0 0;
  background: #f00;
}
.end_btn{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  background: #f86566;
  position: fixed;
  left: 0;
  bottom: 0;
}
.sub_icon0{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_red_sub_icon.png) center center no-repeat;
  background-size: 100% 100%;
}
.add_icon0{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_red_add_icon.png) center center no-repeat;
  background-size: 100% 100%;  
}
.sub_icon1{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_gray_sub_icon.png) center center no-repeat;
  background-size: 100% 100%;
}
.add_icon1{
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_gray_add_icon.png) center center no-repeat;
  background-size: 100% 100%;  
}
